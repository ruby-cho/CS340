<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Customer</title>
    <!-- Link to external stylesheet for styling the form -->
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <a href="/" class="return-button">Return to Home</a>
    <h1>Add New Customer</h1>
    <!-- Form for adding new customer details -->
    <form id="addCustomerForm">
        <h2>Customer Details</h2>
        <label for="firstName">First Name:</label>
        <input type="text" id="firstName" name="firstName" required><br><br>

        <label for="lastName">Last Name:</label>
        <input type="text" id="lastName" name="lastName" required><br><br>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required><br><br>

        <h2>Subscription Details</h2>
        <label for="startDate">Subscription Start Date:</label>
        <input type="date" id="startDate" name="startDate" required><br><br>

        <label for="endDate">Subscription End Date:</label>
        <input type="date" id="endDate" name="endDate" required><br><br>

        <label for="activeStatus">Active Status:</label>
        <select id="activeStatus" name="activeStatus">
            <option value="Active">Active</option>
            <option value="Inactive">Inactive</option>
        </select><br><br>
    </form>

    <!-- JavaScript to handle form submission -->
    <script>
        document.getElementById('addCustomerForm').onsubmit = function() {
            return true;
        };
    </script>
</body>
</html>
